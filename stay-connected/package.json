{
  "name": "stay-connected",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .ts,.tsx",
    "scan:auth": "node -e \"const fs=require('fs');const gl=require('glob');const files=gl.sync('**/*.{ts,tsx}',{ignore:['node_modules/**','android/**','ios/**','.expo/**','dist/**','build/**','nvm-windows/**','**/*.d.ts']});let bad=[];for(const f of files){const s=fs.readFileSync(f,'utf8');if(/firebase\\/auth\\/react-native/i.test(s)) bad.push(f);if(/\\bgetAuth\\s*\\(/.test(s)&&f!=='src/lib/firebase.ts'&&f!=='src/lib/debugAuth.ts') bad.push(f);if(/\\binitializeAuth\\s*\\(/.test(s)&&f!=='src/lib/firebase.ts') bad.push(f);}if(bad.length){console.error('Banned auth init found in:',bad);process.exit(1);}console.log('Auth scan clean');\"",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/datetimepicker": "8.4.1",
    "@react-native-picker/picker": "2.11.1",
    "@react-navigation/bottom-tabs": "^6.5.12",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@types/react": "~19.0.10",
    "eslint": "^9.33.0",
    "expo": "53.0.20",
    "expo-calendar": "~14.1.4",
    "expo-contacts": "~14.2.5",
    "expo-file-system": "~18.1.11",
    "expo-sharing": "~13.1.5",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv": "^17.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "firebase": "^10.14.1",
    "glob": "^11.0.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0"
  }
}
